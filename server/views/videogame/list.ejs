<% include ../partials/header.ejs %>
<% include ../partials/main_nav.ejs %>
<main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-10">
            <h1><% title %> </h1>  
            <a href="/videogameslist/add" class="btn btn-primary" 
            role="button"><i class="fas fa-plus-circle"></i> Add Videogame</a>      
        <br>
        <table class="table table-bordered table-striped table-hover">
            <tr class="d-flex">
                <th class="text-center col-2">Name</th>
                <th class="text-center col-2">Publisher</th>
                <th class="text-center col-1">Release</th>
                <th class="text-center col-1">Price</th>
            </tr>
            <% for(let count=0;count<VideogameList.length;count++) { %>    
            <tr class="d-flex">
                <td class="text-center col-2"><%= VideogameList[count].Name %></td>
                <td class="text-center col-2"><%= VideogameList[count].Publisher %></td>
                <td class="text-center col-1"><%= VideogameList[count].Release %></td>
                <td class="text-center col-1"><%= VideogameList[count].Price %></td>
                <td class="text-center col-1">
                    <a href="/videogameslist/edit/<%= VideogameList[count]._id %>" 
                        class="btn btn-primary btn-sm">
                        <i class="fas fa-pencil-alt"></i> Edit
                    </a>
                </td>
                <td class="text-center col-1">
                    <a href="/videogameslist/delete/<%= VideogameList[count]._id %>" 
                        class="btn btn-danger btn-sm">
                        <i class="fas trash-alt"></i> Delete
                    </a>
                </td>
            </tr>
            <% } %>
        </table>
    </div>
    </div>
</main>
<% include ../partials/bottom_nav.ejs %>
<% include ../partials/footer.ejs %>